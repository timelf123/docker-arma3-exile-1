#!/bin/bash
set -e

. /usr/local/bin/common

echo "Installing dynamic missions"

cd /tmp
curl -Lj https://github.com/Defent/DMS_Exile/archive/Feb.12.2018.zip -o dms.zip 
unzip dms && rm -f dms.zip
cd DMS_Exile-Feb.12.2018/\@ExileServer/addons
makepbo -N a3_dms/
cp -r * /opt/arma3/@ExileServer/addons
rm -rf /tmp/DMS_Exile-Feb.12.2018
